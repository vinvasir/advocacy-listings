<div class="panel-body">
  <%= form_for [@area, @organization], html: { class: "form-horizontal", role: "form" } do |f| %>
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :title %>
      </div>

      <div class="col-md-8">
        <%= f.text_field :title, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :area_id %>
      </div>

      <div class="col-md-8">
        <%= f.collection_select :area_id, Area.all, :id, :name, {selected: @organization.area_id}, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :category_id %>
      </div>

      <div class="col-md-8">
        <%= f.collection_select :category_id, Category.all, :id, :name, {selected: @organization.category_id}, class: 'form-control' %>
      </div>
    </div>    

    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :mission %>
      </div>
      
      <div class="col-md-8">
        <%= f.text_area :mission, rows: 10, class: 'form-control', placeholder: 'What does this organization do?' %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-md-10 col-md-offset-2">
        <%= f.submit "Submit", class: "btn btn-primary btn-lg btn-xlarge" %>
      </div>
    </div>

  <% end %>
</div>
