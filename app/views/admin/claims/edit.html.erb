<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4>Approve or Reject <u><%= @claim.user.email %>'s</u> claim for <strong><%= @claim.organization.title %></strong></h4>
      </div>

      <div class="panel-body">
        <%= form_for ["admin", @claim] do |f| %>
          <div class="form-group">
            <%= f.label :approved, "Approve this claim?", class: 'control-label' %>
            <%= f.select :approved, [['Yes', true], ['No', false]], {}, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :reason, "Why?", class: 'control-label' %>
            <%= f.text_area :reason, rows: 5, class: 'form-control' %>
          </div>

          <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>